{
  "name": "soundboard",
  "version": "1.0.0",
  "main": "src/electron.js",
  "private": true,
  "author": {
    "name": "Luis Carlin",
    "email": "luiscarlin@gmail.com",
    "url": "https://github.com/LuisCarlin"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-mic": "^12.4.1",
    "rimraf": "^2.6.3"
  },
  "homepage": "./",
  "build": {
    "appId": "com.boskysoft",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^7.2.4",
    "electron-builder": "^20.44.2",
    "parcel-bundler": "^1.12.3",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "react-start": "parcel -p 3000 index.html --out-dir build",
    "build": "yarn clean-build && yarn react-build && yarn electron-build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "electron-build": "electron-builder -mwl",
    "clean-build": "rimraf build/ .cache dist/"
  }
}
